@model Pizza_Hunt.Models.pasta

@{
    ViewData["Title"] = "pasteInsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/insertEdit.css">
}

<div class="title">
        <h1>Adaugati paste</h1>
</div>
<div class="row content">
    <div class="col-md-4">
        <form asp-action="pasteInsert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <br />
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kcal" class="control-label"></label>
                <br />
                <input asp-for="kcal" class="form-control" />
                <span asp-validation-for="kcal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="img_url" class="control-label"></label>
                <br />
                <input asp-for="img_url" class="form-control" />
                <span asp-validation-for="img_url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ingredients" class="control-label"></label>
                <br />
                <input asp-for="ingredients" class="form-control" />
                <span asp-validation-for="ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Adaugati" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <a asp-controller="Food" asp-action="paste"><button class="goBackButton">Back</button></a> 
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
