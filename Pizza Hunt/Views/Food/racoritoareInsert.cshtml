@model Pizza_Hunt.Models.refreshments

@{
    ViewData["Title"] = "racoritoareInsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/insertEdit.css">
}
<div class="title">
    <h1>Adaugati o racoritoare</h1>
</div>
<div class="row content">
    <div class="col-md-4">
        <form asp-action="racoritoareInsert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <br />
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kcal" class="control-label"></label>
                <br />
                <input asp-for="kcal" class="form-control" />
                <span asp-validation-for="kcal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="img_url" class="control-label"></label>
                <br />
                <input asp-for="img_url" class="form-control" />
                <span asp-validation-for="img_url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Adaugati" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <a asp-controller="Food" asp-action="racoritoare"><button class="goBackButton">Back</button></a>
        <br />
        <br />
        <br />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
