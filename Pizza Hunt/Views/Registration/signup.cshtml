@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/signup.css">
    <title>Document</title>
</head>
<body>
    <div class="content">
        <a asp-controller="Home" asp-action="Index" ><img src="../POZE/pizzalogoLogIn.png" id="logoLogIn"></a>
        <div class="SignUp">
            <label for="fname"><b>First name</b></label>
            <label for="lname" style="margin-left: 100px;"><b>Last name</b></label>
            <br>
            <input type="text" placeholder="First name" name="fname" required>
            <input type="text" placeholder="Last name" name="lname" required>
            <br>
            <label for="mail"><b>Email</b></label>
            <br>
            <input type="email" style="width: 270px;" placeholder="Email" name="mail" required>
            <br>
            <label for="uname"><b>Username</b></label>
            <br>
            <input type="text" placeholder="Username" name="nume" required>
            <br>
            <label for="psw"><b>Password</b></label>
            <label for="conpsw" style="margin-left: 110px;"><b>Confirm Password</b></label>
            <br>
            <input type="password" placeholder="Password" name="psw" required>
            <input type="password" placeholder="Confirm Password" name="conpsw" required>

            <div class="center">
                <button class="btn">
                <svg width="100px" height="40px" viewBox="0 0 100 40" class="border">
                    <polyline points="99,1 99,39 1,39 1,1 99,1" class="bg-line" />
                    <polyline points="99,1 99,39 1,39 1,1 99,1" class="hl-line" />
                </svg>
                <span>Sign Up</span>
                </button>
            </div>
            <h4>Already having an account? <a asp-controller="Registration" asp-action="login" >Log in</a></h4>
        </div>   
    </div>
</body>
</html>